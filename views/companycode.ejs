<%- include("partials/header.ejs") -%>
<%- include("partials/body-top.ejs") -%>
<%- include("partials/ud-sidebar.ejs") -%>

<div class="col-sm-10">
  <div class="row">
    <div class="col-12 shadow-sm"><h2>Company Code</h2></div>
  </div>
<!-- container fluid -->
<div class="container-fluid">

    <!-- <div class="row main-box bg-light rounded-3 p-3"> -->
        <!-- <div class=""> -->
        <div class="row">
          <div class="col-md-12 col-lg-4 p-3 mt-3">
           <div class="bg-light rounded-3 p-3 mt-3 shadow-sm">
                      <form id="ccode">
                        <div class="form-group row mb-3 d-none" id="onSelectDiv">
                          <label class="col-sm-5 col-form-label">Selected Company Code</label>
                          <div class="col-sm-6">
                            <input type="text" class="form-control" name="selectedCompanyCode" id="selectedCompanyCode" disabled>
                          </div>
                      </div>
                        <div class="form-group row mb-3">
                            <input type="text" class="form-control d-none" name="company_codeID" id="company_codeID">
                            <label class="col-sm-4 col-form-label">Company Code</label>
                            <div class="col-sm-7">
                              <input type="text" class="form-control" name="company_code" id="company_code" required>
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Country</label>
                            <div class="col-sm-7">
                              <select class="form-select" name="company_country" id="company_country" required>
                                  <option selected disabled>Choose...</option>
                                <%  countries.forEach(function(country) { %>
                                    <option value="<%= country %>"><%= country %> </option>
                                <%  }); %>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label class="col-sm-4 col-form-label">Currency</label>
                            <div class="col-sm-7">
                              <select class="form-select" name="company_currency" id="company_currency" required>
                                  <option selected disabled>Choose...</option>
                                <%  currencies.forEach(function(currency) { %>
                                    <option value="<%= currency %>"><%= currency %> </option>
                                <%  }); %>
                                </select>
                            </div>
                        </div>
                       
                    </form>
                     <!-- button -->
                     <div class="mb-3 mt-5 d-flex justify-content-center">
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="ccode-addbtn">Create</button>
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="ccode-updatebtn">Update</button>
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="ccode-deletebtn">Delete</button>
                      <button type="button" class="btn btn-success btn-sm btn-space" id="ccode-clearbtn">Clear</button>
                  </div> <!-- end of button -->
                      <div id="ccode-label" class="alert d-none"  role="alert">
                      </div>
                  
          </div>
        </div>

          <div class="col-sm-1"></div> 

          <div class="col-md-12 col-lg-7 p-3 mt-3">
            <h4>List of Company Codes</h4>
            <div class="table-responsive-sm mb-5" >
                <table class="table table-hover" id="companyCodeTable">
                    <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col" hidden>id</th>
                          <th scope="col">Company Code</th>
                          <th scope="col">Country</th>
                          <th scope="col">Currency</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% var i= 1;%>
                        <% comcodes.forEach(function(comcodes) { %>
                            
                                <tr>
                                <th scope="row"><%= i++ %></th>
                                <td hidden><%= comcodes.id %></td>
                                <td><%= comcodes.code %></td>
                                <td><%= comcodes.country %></td>
                                <td><%= comcodes.currency %></td>
                              </tr>
                           <% }); %>
                      </tbody>
                </table>
              </div>

          </div>  
          
        </div>
        
        <!-- </div> -->
    <!-- </div>  -->
<!-- end of container fluid -->



<%- include("partials/footer.ejs") -%>
