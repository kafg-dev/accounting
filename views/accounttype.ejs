<%- include("partials/header.ejs") -%>
<%- include("partials/body-top.ejs") -%>
<%- include("partials/ud-sidebar.ejs") -%>

<div class="col-sm-10">
  <div class="row">
    <div class="col-12 shadow-sm"><h2>Account Type</h2></div>
  </div>
<!-- container fluid -->
<div class="container-fluid">

    <!-- <div class="row main-box bg-light rounded-3 p-3"> -->
        <!-- <div class=""> -->
        <div class="row">
          <div class="col-md-12 col-lg-4 p-3 mt-3">
           <div class="bg-light rounded-3 p-3 mt-3 shadow-sm">
                      <form id="acctype">
                        <div class="form-group row mb-3 d-none" id="onSelectDiv">
                          <label class="col-sm-5 col-form-label">Selected Account Type</label>
                          <div class="col-sm-6">
                            <input type="text" class="form-control" name="selectedAccountType" id="selectedAccountType" disabled>
                          </div>
                          </div>
                        <div class="form-group row mb-3">
                            <input type="text" class="form-control d-none" name="accountTypeID" id="accountTypeID">
                            <label class="col-sm-4 col-form-label">Account Type</label>
                            <div class="col-sm-7">
                              <input type="text" class="form-control" name="account_type" id="account_type" required>
                            </div>
                        </div>
                    
                    </form>
                     <!-- button -->
                     <div class="mb-3 mt-5 d-flex justify-content-center">
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="acctype-addbtn">Create</button>
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="acctype-updatebtn">Update</button>
                      <button type="button" class="btn btn-primary btn-sm btn-space" id="acctype-deletebtn">Delete</button>
                      <button type="button" class="btn btn-success btn-sm btn-space" id="acctype-clearbtn">Clear</button>
                  </div> <!-- end of button -->
                      <div id="acctype-label" class="alert d-none"  role="alert">
                      </div>
                  
          </div>
        </div>

          <div class="col-sm-1"></div> 

          <div class="col-md-12 col-lg-7 p-3 mt-3">
            <h4>List of Account Types</h4>
            <div class="table-responsive-sm mb-5" >
                <table class="table table-hover" id="accountTypeTable">
                    <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col" hidden>id</th>
                          <th scope="col">Account Type</th>
                          <th scope="col">Account Group/s</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% var i= 1;%>
                        <% accountTypes.forEach(function(accountType) { %>
                        <tr>
                          <th scope="row"><%= i++ %></th>
                          <td hidden><%= accountType.id %></td>
                          <td ><%= accountType.accountType %></td>
                          <td>
                            <% accountType.accountGroup.forEach(function(group){ %>
                              <%= group.accountGroup %> <br>
                              <%});%>
                          </td>

                        </tr>
                        <% }); %>
                      </tbody>
                </table>
              </div>

          </div>  
          
        </div>
        
        <!-- </div> -->
    <!-- </div>  -->
<!-- end of container fluid -->



