<div class="col-sm-10">
  <div class="row">
    <div class="col-12 shadow-sm"><h2>Master Data</h2></div>
    <div class="col-12 shadow-sm">Vendor</div>
  </div>
<!-- container -->
<div class="container-fluid">
    
    <div class="row main-box bg-light rounded-3">
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <button class="nav-link active" id="nav-vendor-create-tab" data-bs-toggle="tab" data-bs-target="#nav-vendor-create" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Create</button>
          <button class="nav-link" id="nav-vendor-modify-tab" data-bs-toggle="tab" data-bs-target="#nav-vendor-modify" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Modify</button>
        </div>
      </nav>
      <div class="tab-content " id="nav-tabContent">
         <!-- first tab -->
         <div class="tab-pane fade show active " id="nav-vendor-create" role="tabpanel" aria-labelledby="nav-vendor-create">
          <form action="" method="post" id="vd-create">
          <div class="row">
              
                <!-- 1st col -->
                <div class="col-sm-4">
                  <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Vendor Code</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" name="vd_code" id="vd_code" required>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Vendor Name</label>
                    <div class="col-sm-7">
                      <input type="text" class="form-control" name="vd_name" id="vd_name" required>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Company Code</label>
                    <div class="col-sm-4">
                    <select class="form-select" name="vd_companycode" id="vd_companycode" required>
                      <option selected disabled>Choose...</option>
                        <% companyCodes.forEach(function(code) { %>
                            <option value="<%= code._id %>"><%= code.code %></option>
                        <% }); %>
                      </select>
                    </div>
                  </div>
                  
                </div>
                <!-- end of 1st col -->
                <!-- 2nd col -->
                <div class="col-sm-3">
                  <div class="form-group row mb-3">
                    <label class="col-sm-5 col-form-label">Account Currency</label>
                    <div class="col-sm-6">
                    <select class="form-select" name="vd_accCurrency" id="vd_currency" required>
                      <option selected disabled>Choose...</option>
                      <option value="PHP">PHP</option>
                      <option value="MYR">MYR</option>
                    </select>
                  </div>
                  </div>
                 
                  <div class="form-group row mb-3">
                    <label class="col-sm-5 col-form-label">Tax Category</label>
                    <div class="col-sm-6">
                      <input type="text" class="form-control" name="vd_taxcategory" id="vd_taxcategory" >
                    </div>
                  </div>

                  <div class="form-group row mb-3">
                    <label class="col-sm-5 col-form-label">Payment Terms</label>
                    <div class="col-sm-6">
                    <select class="form-select" name="vd_term" id="vd_term" required>
                      <option selected disabled>Choose...</option>
                      <option value="Z07">Z07</option>
                      <option value="Z15">Z15</option>
                      <option value="Z30">Z30</option>
                      <option value="Z45">Z45</option>
                    </select>
                    </div>
                  </div>
                  
                </div>
                <!-- end of 2nd col -->
                 <!-- 3nd col -->
                 <div class="col-sm-4">
                  <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Tax</label>
                    <div class="col-sm-7">
                      <input type="text" class="form-control" name="vd_tax" id="vd_tax" >
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <label class="col-sm-4 col-form-label">Recon Acct for Acct Type</label>
                    <div class="col-sm-7">
                    <select class="form-select" name="vd_recon" id="vd_recon" required>
                      <option selected disabled>Choose...</option>
                      <option value="Accounts Payable - Trade">Accounts Payable - Trade</option>
                      <option value="Accounts Payable - Non-Trade">Accounts Payable - Non-Trade</option>
                    </select>
                  </div>
                  </div> 
                </div>
                <!-- end of 3nd col -->
                <!-- 2ND LAYER -->
                <div class="col-sm-12">
                  <p class="desc border-bottom">Address</p>
                  <div class="form-group row mb-3">
                    <label class="col-sm-1 col-form-label">Street</label>
                    <div class="col-sm-3">
                      <input type="text" class="form-control" name="vd_street" id="vd_street" required>
                    </div>
                    <label class="col-sm-1 col-form-label">City Name</label>
                    <div class="col-sm-2">
                      <input type="text" class="form-control" name="vd_city" id="vd_city" required>
                    </div>
                    <label class="col-sm-1 col-form-label">Country</label>
                    <div class="col-sm-2">
                      <select class="form-select" name="vd_country" id="vd_country" required>
                        <option selected disabled>Choose...</option>
                       <%  countries.forEach(function(country) { %>
                          <option value="<%= country %> "><%= country %> </option>
                       <%  }); %>
                      </select>
                    </div>
                    <label class="col-sm-1 col-form-label">Postal Code</label>
                    <div class="col-sm-1">
                      <input type="text" class="form-control" name="vd_postalcode" id="vd_postalcode" required>
                    </div>
                  </div>
                </div>
                <!-- end of 2ND LAYER -->
                <!-- 3rd LAYER -->
                <div class="col-sm-12">
                  <p class="desc border-bottom">Communication</p>
                  <div class="form-group row mb-3">
                    <label class="col-sm-1 col-form-label">Telephone</label>
                    <div class="col-sm-3">
                      <input type="text" class="form-control" name="vd_telephone" id="vd_telephone" required>
                    </div>
                    <label class="col-sm-1 col-form-label">Email</label>
                    <div class="col-sm-3">
                      <input type="email" class="form-control" name="vd_email" id="vd_email" required>
                    </div>
                    <label class="col-sm-1 col-form-label">Website</label>
                    <div class="col-sm-3">
                      <input type="text" class="form-control" name="vd_website" id="vd_website" required>
                    </div>
                  </div>
                </div>
                <!-- end of 3rd LAYER -->
                
              </form>
                <!-- button -->
                
                <div class="mb-3 mt-5 d-flex justify-content-center">
                  <button type="button" class="btn btn-primary btn-sm" id="vd-create-btn">Create</button>
                </div> <!-- end of button -->
                <div id="vd-create-label" class="alert d-none"  role="alert"></div>
          </div> <!-- end of row --> 
        </div>
        <!-- end of first tab -->

